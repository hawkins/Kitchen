<div class="container">
  <div class="row">
    <h3>Search for Recipes</h3>
    <div class="column">
      <form>
        <label>Search</label>
        <input type="text" name="term" value="<%= params[:term] %>" />
        <input type="submit" value="Search"/>
      </form>
      <table class="table">
        <tbody>
          <% @recipes.each do |recipe| %>
            <tr>
              <%= render recipe %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
