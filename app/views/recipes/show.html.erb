<h3>
  <%= link_to @recipe.title, @recipe %>
</h3>

<p>
<i>Created at</i>:
<%= @recipe.created_at %>,
<i>last updated</i>:
<%= @recipe.updated_at %>
</p>
<p>Created by <%= link_to User.find(@recipe.user_id).name, User.find(@recipe.user_id) %>
<p>
<% if current_user %>
  <% if current_user.id == @recipe.user_id %>
    <%= link_to 'edit', edit_recipe_path(@recipe) %>
  <% end %>
<% end %>
</p>
<p>
<strong>Instructions:</strong>
<ol>
  <% @recipe.content.split("\n").each do |line| %>
    <li><%= line %></li>
  <% end %>
</ol>
</p>

<p>
<strong>Ingredients:</strong>
<ul>
  <% @recipe.ingredients.split("\n").each do |ing| %>
    <li>
      <strong><%= ing.split(", ", 2)[0] %></strong>
      <% if ing.include? ", " %>
        <span>
          (<%= ing.split(", ", 2)[1] %>)
        </span>
      <% end %>
    </li>
  <% end %>
</ul>
</p>

<%= link_to('View source', @recipe.source) if @recipe.source %>
